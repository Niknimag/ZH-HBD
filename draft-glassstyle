<body>

  <!-- 飘动心形动画 -->
  <script>
    setInterval(() => {
      const heart = document.createElement("div");
      heart.className = "heart";
      heart.style.left = Math.random() * 100 + "vw";
      heart.textContent = "💖";
      document.body.appendChild(heart);
      setTimeout(() => heart.remove(), 6000);
    }, 800);
  </script>

  <div class="glass-container">
    <h1>🎂 Happy Birthday Zhe Huang</h1>
    <p>May all of happiness and fortune be with you 💗💰</p>

    <input type="text" id="sender" placeholder="Your name..." />
    <br />
    <input type="text" id="message" placeholder="Type your thoughts here..." />
    <br />
    <button onclick="showMessage()">Send</button>

    <div id="output" class="message-output"></div>
  </div>

  <script>
    const colors = ['#ff69b4', '#ff85c1', '#ffa07a', '#f08080', '#ffb6c1', '#db7093', '#ff6347', '#ff4500', '#ff1493'];

    // 页面加载时显示历史留言
    window.addEventListener("DOMContentLoaded", () => {
      const outputEl = document.getElementById('output');
      const messages = JSON.parse(localStorage.getItem("messages") || "[]");
      messages.forEach(msg => {
        const p = document.createElement('p');
        p.textContent = msg;
        p.style.color = colors[Math.floor(Math.random() * colors.length)];
        outputEl.appendChild(p);
      });
    });

    function showMessage() {
      const name = document.getElementById('sender').value.trim();
      const msg = document.getElementById('message').value.trim();
      const outputEl = document.getElementById('output');

      if (!name || !msg) {
        alert("Please enter your name and message.");
        return;
      }

      const fullMsg = `${name} says: “${msg}”`;

      // 页面显示留言
      const newMsg = document.createElement('p');
      newMsg.textContent = fullMsg;
      newMsg.style.color = colors[Math.floor(Math.random() * colors.length)];
      outputEl.appendChild(newMsg);

      // 保存到 localStorage
      let messages = JSON.parse(localStorage.getItem("messages") || "[]");
      messages.push(fullMsg);
      localStorage.setItem("messages", JSON.stringify(messages));

      // 弹幕效果
      const danmaku = document.createElement('div');
      danmaku.className = 'danmaku';
      danmaku.textContent = `${name}: ${msg}`;
      danmaku.style.color = colors[Math.floor(Math.random() * colors.length)];
      const topOffset = Math.floor(Math.random() * 400) + 50;
      danmaku.style.setProperty('--top', topOffset + 'px');
      document.body.appendChild(danmaku);
      setTimeout(() => danmaku.remove(), 8000);

      document.getElementById('sender').value = '';
      document.getElementById('message').value = '';
    }
  </script>

</body>
</html>
